<h1>New Animal</h1>
<%= form_for :pet, url: pets_path do |f| %>
  <p>
    <%= f.label :kind %><br>
    <%= f.text_field :kind %>
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :age %><br>
    <%= f.text_field :age %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :vaccinated %><br>
    <%= f.select :vaccinated, options_for_select([["Si", "si"], ["No", "no"], ["Se desconoce", "desconocido"]]) %>
  </p>

  <p>
    <%= f.label :sterilized %><br>
    <%= f.select :sterilized, options_for_select([["Si", "si"], ["No", "no"], ["Se desconoce", "desconocido"]]) %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.select :location, options_for_select([["Aguascalientes", "ag"], ["Baja California", "bc"], ["D.F", "df"]]) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
